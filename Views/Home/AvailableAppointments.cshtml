@model List<AppointmentSlot>
@{
    ViewData["Title"] = "Dostępne terminy";
    var doctor = ViewBag.Doctor as Doctor;
}

<div class="container mt-4">
    <div class="card mb-4 border-0 shadow-sm bg-primary text-white">
        <div class="card-body p-4 d-flex align-items-center">
            <div class="me-4 bg-white text-primary rounded-circle d-flex justify-content-center align-items-center shadow" style="width: 70px; height: 70px; font-size: 30px;">
                <i class="bi bi-person-fill"></i>
            </div>
            <div>
                <h6 class="text-white-50 mb-1">Wybrany lekarz:</h6>
                <h2 class="mb-0">@doctor?.FullName</h2>
                <span class="badge bg-white text-primary mt-2">@doctor?.Specialization</span>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4><i class="bi bi-calendar3"></i> Dostępne terminy</h4>
        <a asp-action="Doctors" asp-route-specialization="@doctor?.Specialization" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Zmień lekarza
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-3">
            <i class="bi bi-calendar-x display-1 text-muted"></i>
            <h3 class="mt-3 text-muted">Brak wolnych terminów</h3>
            <p>Niestety ten lekarz nie ma obecnie wolnych wizyt. Spróbuj sprawdzić innego specjalistę.</p>
            <a asp-action="Doctors" class="btn btn-primary mt-2">Zobacz innych lekarzy</a>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var slot in Model)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="card h-100 border-primary border-opacity-25 shadow-sm text-center hover-shadow transition-all">
                        <div class="card-body py-3">
                            <div class="text-primary mb-2">
                                <i class="bi bi-clock-history fs-4"></i>
                            </div>
                            <h5 class="card-title fw-bold text-dark mb-0">@slot.StartTime.ToString("HH:mm")</h5>
                            <small class="text-muted d-block mb-2">@slot.StartTime.ToString("dd.MM.yyyy (dddd)")</small>

                            <span class="badge bg-light text-dark border mb-3">
                                <i class="bi bi-hourglass-split"></i> @slot.DurationMinutes min
                            </span>

                            <div class="d-grid">
                                <a asp-controller="Appointment" asp-action="BookAppointment" asp-route-slotId="@slot.Id" class="btn btn-outline-primary btn-sm">
                                    Rezerwuj
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-3px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        border-color: var(--bs-primary) !important;
    }

    .transition-all {
        transition: all 0.2s ease-in-out;
    }
</style>