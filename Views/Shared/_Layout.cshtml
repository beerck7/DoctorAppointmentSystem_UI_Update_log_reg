<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] – System Rezerwacji</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <header class="p-3 mb-3 border-bottom bg-light">
        <div class="container d-flex justify-content-between align-items-center">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">System Rezerwacji</a>
            <div>
                <a class="btn btn-outline-primary btn-sm me-2" asp-controller="Home" asp-action="Doctors">Lekarze</a>
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <span class="me-2">Witaj, @User.Identity.Name!</span>
                    <a class="btn btn-outline-secondary btn-sm me-2" asp-controller="Appointment" asp-action="MyAppointments">Moje Wizyty</a>
                    <a class="btn btn-outline-danger btn-sm" asp-controller="Account" asp-action="Logout">Wyloguj</a>
                }
                else
                {
                    <a class="btn btn-outline-success btn-sm me-2" asp-controller="Account" asp-action="Login">Zaloguj</a>
                    <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Register">Zarejestruj</a>
                }
            </div>
        </div>
    </header>
    <main class="container mb-5">@RenderBody()</main>
    <footer class="border-top footer text-muted py-3 text-center">
        &copy; @DateTime.Now.Year – System Rezerwacji Wizyt
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>